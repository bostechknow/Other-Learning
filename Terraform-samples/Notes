# Useful terraform commands

terraform state list                                    # list all resources
terrafrom state show aws_vpc.btk_vpc                    # list details of one resource
terraform show                                          # show full state details
terraform fmt                                           # automate clean-up / formatting

terraform console
terraform apply -var="host_os=unix"
terraform apply -var-file="dev.tfvars"
terraform apply -refresh-only
terraform output

terraform init
terraform plan
terraform apply
terraform apply -auto-approve
terraform destroy
terraform plan -destroy



interpreter = ["Powershell", "-Command"]
interpreter = ["bash", "-c"]


